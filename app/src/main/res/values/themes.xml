<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="app_Theme.AndroidTemplate" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_purple_500</item>
        <item name="colorPrimaryVariant">@color/app_purple_700</item>
        <item name="colorOnPrimary">@color/app_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_teal_200</item>
        <item name="colorSecondaryVariant">@color/app_teal_700</item>
        <item name="colorOnSecondary">@color/app_black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="app_Theme.AndroidTemplate.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="app_Theme.AndroidTemplate.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="app_Theme.AndroidTemplate.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
