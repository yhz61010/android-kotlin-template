root = true

# https://pinterest.github.io/ktlint/rules/configuration-ktlint/
[*.{kt,kts}]
# Compose 函数命名规则 - 允许 @Composable 注解的函数以大写开头
ktlint_function_naming_ignore_when_annotated_with = Composable
# 基础缩进 4 个空格
indent_size = 4
# Use "off" (or -1) to ignore max line length or a positive number to set max line length
max_line_length = 100
ktlint_standard_no-consecutive-comments = disabled
# ktlint 缩进设置
ktlint_standard_indent = enabled
ktlint_standard_parameter-list-wrapping = enabled